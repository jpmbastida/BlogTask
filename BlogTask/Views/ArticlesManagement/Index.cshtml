@using Microsoft.AspNet.Identity
@model IEnumerable<Blog.Entities.Articles.Article>

@{
    ViewBag.Title = "Manager";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<div>
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "ArticlesManagement", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>@Html.ActionLink("Log off", "LogOff", "ArticlesManagement", routeValues: null, htmlAttributes: new { title = "logoff" })</li>
    </ul>
</div>
<h1>Article Manager</h1>
@using (Html.BeginForm("Create", "ArticlesManagement", new { id = "add-article" }, FormMethod.Get, new { id = "create-article", target = "_blank" }))
{
    <div>
        <button class="button-more button-background-more">+ Add new Article</button>
    </div>
}
@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { id = "create-article"}))
{
    <div>
        <button class="button-more button-background-more">Return to main</button>
    </div>
}
<hr />
@foreach (var item in Model)
{
    <div>
        <div>
            <span class="label-text">
                Title:
            </span>
            @Html.DisplayFor(modelItem => item.ArticleTitle)
        </div>
        <div>
            <span class="label-text">
                Author:
            </span>
            @Html.DisplayFor(modelItem => item.Author)
        </div>
        <div>
            <span class="label-text">
                Data publication:
            </span>
            @Html.DisplayFor(modelItem => item.Time)
        </div>
        <div>
            <span class="label-text body-text">
                Body text:
            </span>
            @Html.DisplayFor(modelItem => item.ArticleBody)
        </div>
        <div id="commands-tags">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </div>
        <hr /><hr />
    </div>
}


