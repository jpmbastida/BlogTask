@model Blog.Entities.Articles.Article

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h1>Create Article</h1>

@using (Html.BeginForm("Admin", "ArticlesManagement", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group-create">
            <span class="control-label">Article Title:</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ArticleTitle, new { htmlAttributes = new { @class = "form-control-create" } })
                @Html.ValidationMessageFor(model => model.ArticleTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-create">
            <span class="control-label">Author's name:</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control-create" } })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-create">
            <span class="control-label">Publishing date:</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control-create" } })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group-create">
            <span class="control-label">Keywords: (ex. word1, word2, ...)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { id = "textKeywords", @class = "form-control-create" } })
                @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-create">
            <span class="control-label">Article body:</span>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ArticleBody, new { htmlAttributes = new { id = "article-body", @class = "form-control-create", rows = "40", cols = "10" } })
                @Html.ValidationMessageFor(model => model.ArticleBody, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Create" id="bnt-create" class="button-poll button-poll-background" />
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/MyJavaScript.js"></script>
}
<hr />
<div>
    @Html.ActionLink("Back to List", "Admin")
    <br />
</div>



