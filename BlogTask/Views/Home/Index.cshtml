@model IEnumerable<BlogTask.Models.Article>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var article in Model)
{
    <h1>
        <b>@article.ArticleTitle<br></b>
    </h1>
    <hr>
    <h3>
        @article.AuthorName&copy;, @article.PublishedTime<br>
    </h3>
    <p>
        <br>@Html.Raw(article.ArticleBody)
    </p>
    <hr/>
}


